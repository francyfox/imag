{% include 'main/header.twig' %}
<div class="wrap">
    <div class="example-wrapper">

        <div class="content">
            <h1>Hello {{ controller_name }}!</h1>
            This friendly message is coming from:
            <ul>
                <li>Your controller at <code><a href="{{ '/home/imag2/src/Controller/AddProductController.php'|file_link(0) }}">src/Controller/AddProductController.php</a></code></li>
                <li>Your template at <code><a href="{{ '/home/imag2/templates/add_product/index.html.twig'|file_link(0) }}">templates/add_product/index.html.twig</a></code></li>
            </ul>
        </div>
    </div>
    <div class="content">

        <form class="table _task" method="get" action="/main">

                {% for task in obj %}
                <ul>
                    <li>{{ task.id }}</li>
                    <li>{{ task.name }}</li>
                    <li>{{ task.params }}</li>
                    <li>{{ task.state }}</li>
                    <li>{{ task.dateCreate|date('Y-m-d H:i:s') }}</li>
                    <li>{{ task.dateDone|date('Y-m-d H:i:s') }}</li>
                    <li><a class="ico" href="{{ app.request.uri }}/{{ task.id }}/run"><i class="fas fa-play"></i></a></li>
                    <li><a class="ico" href="{{ app.request.uri }}/{{ task.id }}/delete"><i class="fas fa-trash-alt"></i></a></li>
                </ul>
                {% endfor %}

        </form>



    </div>
    <div class="content">
        <div class="links">
            <a href="/main">BACK TO MAIN</a>
        </div>
    </div>
</div>
{% include 'main/bottom.twig' %}